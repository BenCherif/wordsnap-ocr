    android:paddingLeft="6dip">
    <TextView android:id="@+id/server_description_text" android:textAppearance="?android:attr/textAppearanceMedium"
        android:maxLines="1" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:ellipsize="end"/>
